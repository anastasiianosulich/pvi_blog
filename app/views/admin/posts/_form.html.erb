<% if @post.errors.any? %>
<div class="alert alert-danger">
    <h5><%= t('common.errors') %></h5>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<% end %>

<%= form_for [:admin, @post], html: {multipart: true} do |f| %>
    <div class="form-group my-2">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group my-2">
        <%= f.label :summary %>
        <%= f.text_area :summary, class: 'form-control' %>
    </div>

    <div class="form-group my-2">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>

    <div class="form-group my-2">
        <%= f.label :body %>
        <%= f.rich_text_area :body %>
    </div>

    <div class="form-group">
        <%= f.label :category_id %>
        <%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control' %>
    </div>

    <div class="form-group my-2">
        <%= f.label :all_tags %>
        <%= f.text_field :all_tags, class: 'form-control' %>
    </div>

    <div class="form-group my-3">
        <%= f.submit "Зберегти", class: 'btn btn-primary' %>
        <%= link_to "Назад", :back, class: 'btn btn-outline-secondary' %>
    </div>
<% end %>


